{
  "manifest_version": 3,
  "name": "EasyTrans - OCR翻译",
  "version": "1.0.0",
  "description": "Chrome扩展，支持截图OCR和中英文翻译",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://api.moonshot.cn/*"
  ],
  "background": {
    "service_worker": "background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/index.ts"
      ],
      "css": []
    }
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "EasyTrans"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [],
      "matches": ["<all_urls>"]
    }
  ]
}